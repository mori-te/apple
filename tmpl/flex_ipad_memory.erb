      },

      {
        "type": "separator"
      },
      {
        "type": "text",
        "text": "追加で+18,000円",
        "color": "#aaaaaa",
        "size": "sm",
        "wrap": true,
        "align": "center",
        "margin": "lg"
      },
      {
        "type": "button",
        "style": "primary",
        "action": {
          "type": "postback",
          "label": "256GB",
          "data": "task=flex_ipad_model&type=ipad&color=<%= color %>&mem=256"
        },
        "color": "#2432AB"
      }
    ]
